<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="16dp"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleMarginBottom="16dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="true"
            app:expandedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Expanded"
            app:collapsedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Collapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/account_avatar"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="96dp"
                        android:background="?attr/colorPrimaryContainer"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/account_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="24dp"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/account_avatar"
                        app:layout_constraintTop_toTopOf="@+id/account_avatar"
                        tools:text="ProGamer123" />

                    <TextView
                        android:id="@+id/account_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintStart_toStartOf="@+id/account_name"
                        app:layout_constraintTop_toBottomOf="@+id/account_name"
                        tools:text="#2YQ9VRLJ" />

                    <TextView
                        android:id="@+id/account_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintStart_toStartOf="@+id/account_tag"
                        app:layout_constraintTop_toBottomOf="@+id/account_tag"
                        tools:text="Level 234" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:paddingBottom="8dp"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_back"
                    app:title="Account Details">
                    
                    <ImageButton
                        android:id="@+id/share_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/share_account"
                        app:srcCompat="@drawable/ic_share"
                        app:tint="?attr/colorOnPrimary" />
                        
                </androidx.appcompat.widget.Toolbar>
            
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">

            <!-- Stats Cards -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/stats_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/stats_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player_stats"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/stats_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/stats_title" />

                    <!-- Trophies -->
                    <TextView
                        android:id="@+id/trophies_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/trophies"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/stats_divider" />

                    <TextView
                        android:id="@+id/account_trophies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/trophies_label"
                        app:layout_constraintTop_toBottomOf="@id/trophies_label"
                        tools:text="25,430" />

                    <!-- Highest Trophies -->
                    <TextView
                        android:id="@+id/highest_trophies_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/highest_trophies"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toStartOf="@id/trophies_label"
                        app:layout_constraintTop_toBottomOf="@id/account_trophies" />

                    <TextView
                        android:id="@+id/account_highest_trophies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toEndOf="@id/highest_trophies_label"
                        app:layout_constraintTop_toTopOf="@id/highest_trophies_label"
                        tools:text="27,820" />

                    <!-- Brawlers -->
                    <TextView
                        android:id="@+id/brawlers_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/brawlers"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/account_trophies" />

                    <TextView
                        android:id="@+id/account_brawlers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/brawlers_label"
                        app:layout_constraintTop_toBottomOf="@id/brawlers_label"
                        tools:text="62" />

                    <!-- Maxed Brawlers -->
                    <TextView
                        android:id="@+id/maxed_brawlers_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/maxed_brawlers"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/account_brawlers" />

                    <TextView
                        android:id="@+id/account_maxed_brawlers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/maxed_brawlers_label"
                        app:layout_constraintTop_toBottomOf="@id/maxed_brawlers_label"
                        tools:text="45" />
                        
                    <TextView
                        android:id="@+id/how_to_max_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_to_max_out"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textStyle="italic"
                        android:textColor="?attr/colorSecondary"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/account_maxed_brawlers"
                        app:layout_constraintStart_toEndOf="@id/account_maxed_brawlers" />

                    <!-- Progress -->
                    <TextView
                        android:id="@+id/progression_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/progression"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/account_maxed_brawlers" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/maxed_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:progress="75"
                        app:layout_constraintTop_toBottomOf="@id/progression_label" />

                    <TextView
                        android:id="@+id/progression_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/maxed_progress"
                        tools:text="75% maxed" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Percentage History Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/progress_history_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/stats_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/progress_history_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/progress_summary"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/progress_history_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/progress_history_title" />

                    <!-- 1. Trophies Gained -->
                    <TextView
                        android:id="@+id/trophies_gained_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/trophies_gained"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress_history_divider" />

                    <TextView
                        android:id="@+id/trophies_gained_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/trophies_gained_label"
                        app:layout_constraintTop_toBottomOf="@id/trophies_gained_label"
                        tools:text="+1,250" />

                    <TextView
                        android:id="@+id/trophies_gained_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBaseline_toBaselineOf="@id/trophies_gained_value"
                        app:layout_constraintStart_toEndOf="@id/trophies_gained_value"
                        android:layout_marginStart="8dp"
                        tools:text="(+15.2%)" />

                    <!-- 2. Brawlers Gained -->
                    <TextView
                        android:id="@+id/brawlers_gained_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/brawlers_gained"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/trophies_gained_value" />

                    <TextView
                        android:id="@+id/brawlers_gained_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/brawlers_gained_label"
                        app:layout_constraintTop_toBottomOf="@id/brawlers_gained_label"
                        tools:text="+5" />

                    <TextView
                        android:id="@+id/brawlers_gained_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBaseline_toBaselineOf="@id/brawlers_gained_value"
                        app:layout_constraintStart_toEndOf="@id/brawlers_gained_value"
                        android:layout_marginStart="8dp"
                        tools:text="(+8.7%)" />

                    <!-- 3. Credits Gained -->
                    <TextView
                        android:id="@+id/credits_gained_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/credits_gained"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/brawlers_gained_value" />

                    <TextView
                        android:id="@+id/credits_gained_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/credits_gained_label"
                        app:layout_constraintTop_toBottomOf="@id/credits_gained_label"
                        tools:text="+230" />

                    <TextView
                        android:id="@+id/credits_gained_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBaseline_toBaselineOf="@id/credits_gained_value"
                        app:layout_constraintStart_toEndOf="@id/credits_gained_value"
                        android:layout_marginStart="8dp"
                        tools:text="(+12.5%)" />

                    <!-- 4. Coins Gained -->
                    <TextView
                        android:id="@+id/coins_gained_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/coins_gained"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/credits_gained_value" />

                    <TextView
                        android:id="@+id/coins_gained_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/coins_gained_label"
                        app:layout_constraintTop_toBottomOf="@id/coins_gained_label"
                        tools:text="+4,850" />

                    <TextView
                        android:id="@+id/coins_gained_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBaseline_toBaselineOf="@id/coins_gained_value"
                        app:layout_constraintStart_toEndOf="@id/coins_gained_value"
                        android:layout_marginStart="8dp"
                        tools:text="(+22.1%)" />

                    <!-- 5. Power Points Gained -->
                    <TextView
                        android:id="@+id/power_points_gained_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/power_points_gained"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coins_gained_value" />

                    <TextView
                        android:id="@+id/power_points_gained_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/power_points_gained_label"
                        app:layout_constraintTop_toBottomOf="@id/power_points_gained_label"
                        tools:text="+7,200" />

                    <TextView
                        android:id="@+id/power_points_gained_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBaseline_toBaselineOf="@id/power_points_gained_value"
                        app:layout_constraintStart_toEndOf="@id/power_points_gained_value"
                        android:layout_marginStart="8dp"
                        tools:text="(+18.6%)" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- History Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/history_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/progress_history_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/history_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/progression_history"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/history_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/history_title" />

                    <TextView
                        android:id="@+id/no_history_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_progression_history"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/history_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    
                    <!-- Charts Container -->
                    <LinearLayout
                        android:id="@+id/charts_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/history_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        
                        <!-- 1. Trophy History Chart -->
                        <LinearLayout
                            android:id="@+id/trophy_chart_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="24dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/trophy_history"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp" />
                                
                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/trophy_history_chart"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />
                        </LinearLayout>
                        
                        <!-- 2. Brawlers Amount Chart -->
                        <LinearLayout
                            android:id="@+id/brawler_chart_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="24dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/brawler_count"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp" />
                                
                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/brawler_count_chart"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />
                        </LinearLayout>
                        
                        <!-- 3. Credits Gained Chart -->
                        <LinearLayout
                            android:id="@+id/credits_chart_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="24dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/credits_gained"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp" />
                                
                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/credits_chart"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />
                        </LinearLayout>
                        
                        <!-- 4. Coins Gained Chart -->
                        <LinearLayout
                            android:id="@+id/coins_chart_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="24dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/coins_gained"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp" />
                                
                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/coins_chart"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />
                        </LinearLayout>
                        
                        <!-- 5. Power Points Gained Chart -->
                        <LinearLayout
                            android:id="@+id/power_points_chart_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/power_points_gained"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp" />
                                
                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/power_points_chart"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/track_progression_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_gravity="center"
                        android:text="@string/track_progression"
                        app:layout_constraintTop_toBottomOf="@id/no_history_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Future Progress Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/future_progress_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/see_future_progress"
                app:icon="@drawable/ic_calendar"
                app:layout_constraintTop_toBottomOf="@id/history_card" />

            <TextView
                android:id="@+id/last_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?android:attr/textColorSecondary"
                app:layout_constraintEnd_toEndOf="@id/history_card"
                app:layout_constraintTop_toBottomOf="@id/history_card"
                tools:text="Last updated: Jan 1, 2023" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/edit_account"
        app:srcCompat="@drawable/ic_edit" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 