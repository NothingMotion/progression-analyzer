<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/future_progress" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Resources Needed Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resources_needed_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:gravity="center_vertical|center"

                        android:layout_margin="4dp"
                        android:id="@+id/resources_needed_title_container"
                        >

                    <TextView
                        android:id="@+id/resources_needed_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resources_needed"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/currently_maxed_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/currently_maxed_out"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingStart="4dp"/>
                    </LinearLayout>
<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textAlignment="center"-->
<!--                        android:gravity="center_horizontal"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="@id/resources_needed_title_container"-->
<!--                        android:text="(Read Description)"-->
<!--                        android:layout_marginTop="8dp"-->
<!--                        android:paddingTop="16dp"-->
<!--                        android:id="@+id/read_description"-->
<!--                        android:textAppearance="?attr/textAppearanceBodySmall"-->

<!--                        />-->
                    <com.nothingmotion.brawlprogressionanalyzer.ui.components.AccordionView
                        android:id="@+id/read_description_accordion_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/resources_needed_title_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:title="(Read more)"
                        app:animationDuration="300"
                        app:accordionCardElevation="0dp"
                        app:accordionCardCornerRadius="0dp"
                        app:accordionMarginHorizontal="0dp"
                        app:accordionMarginVertical="4dp"
                        app:accordionPadding="2dp"
                        app:contentBackground="?attr/colorOnPrimary"
                        app:titleTextAppearance="?attr/textAppearanceBodyMedium"
                        app:titleTextColor="?attr/colorOnSurfaceVariant"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:text="This Section is meant to be for people which don't have every brawler or they want to be maxed out on brawlers they have. this tool calculates it"
                            />
                    </com.nothingmotion.brawlprogressionanalyzer.ui.components.AccordionView>

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/resources_needed_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/read_description_accordion_view" />

                    <!-- Total Power Points -->
                    <TextView
                        android:id="@+id/powerpoints_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/total_powerpoints_needed"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/resources_needed_divider" />

                    <TextView
                        android:id="@+id/powerpoints_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/powerpoints_label"
                        app:layout_constraintTop_toBottomOf="@id/powerpoints_label"
                        tools:text="42,500" />

                    <!-- Total Coins -->
                    <TextView
                        android:id="@+id/coins_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/total_coins_needed"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/powerpoints_value" />

                    <TextView
                        android:id="@+id/coins_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/coins_label"
                        app:layout_constraintTop_toBottomOf="@id/coins_label"
                        tools:text="86,750" />

                    <!-- Total Credits -->
                    <TextView
                        android:id="@+id/credits_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/total_credits_needed"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coins_value" />
                    <TextView
                        android:id="@+id/credits_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/credits_label"
                        app:layout_constraintTop_toBottomOf="@id/credits_label"
                        tools:text="1,500" />
                    <!-- Upgrade table -->
                    <TextView
                        android:id="@+id/upgrade_table_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Upgrade Cost Per Level"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/credits_value" />

                    <HorizontalScrollView
                        android:id="@+id/upgrade_table_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:scrollbars="none"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/upgrade_table_title">

                        <TableLayout
                            android:id="@+id/upgrade_table"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*">

                            <!-- Table rows will be added dynamically -->

                        </TableLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/credits_table_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Credits Cost Per Rarity"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnBackground"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/upgrade_table_scroll" />
                    <HorizontalScrollView
                        android:id="@+id/credits_table_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:scrollbars="none"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/credits_table_title">

                        <TableLayout
                            android:id="@+id/credits_table"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*">

                            <!-- Table rows will be added dynamically -->

                        </TableLayout>
                    </HorizontalScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Future Resources Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/future_resources_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/resources_needed_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/future_resources_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/future_resources"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/future_resources_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/future_resources_title" />


                    <!-- Timeframe Selection Buttons -->
                    <TextView
                        android:id="@+id/timeframe_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/select_timeframe"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/future_resources_divider" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/timeframe_chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/timeframe_label"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        >

                        <com.google.android.material.chip.Chip
                            android:id="@+id/month_1_chip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/month_1"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/month_3_chip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/month_3" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/month_6_chip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/month_6" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/month_12_chip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/month_12" />
                    </com.google.android.material.chip.ChipGroup>
                    <!-- Player Type Selection Buttons -->

                    <TextView
                        android:id="@+id/player_type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/select_player_type"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/timeframe_chip_group" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/player_type_chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/player_type_label"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/casual_chip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/f2p_player"
                            android:checked="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/competitive_chip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/p2w_player" />
                    </com.google.android.material.chip.ChipGroup>
                    <TextView
                        android:id="@+id/next_rewards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="You will earn these rewards in the next month:"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnBackground"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/player_type_chip_group" />
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:id="@+id/next_rewards_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/next_rewards" />
                        />
                    <!-- Power Points Per Month -->
                    <TextView
                        android:id="@+id/powerpoints_per_month_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/powerpoints_per_month"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/next_rewards_divider" />

                    <TextView
                        android:id="@+id/powerpoints_per_month_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/powerpoints_per_month_label"
                        app:layout_constraintTop_toBottomOf="@id/powerpoints_per_month_label"
                        tools:text="2,500" />

                    <TextView
                        android:id="@+id/powerpoints_months_to_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="@id/powerpoints_per_month_value"
                        app:layout_constraintTop_toBottomOf="@id/powerpoints_per_month_value"
                        tools:text="Will take approximately 17 months to max out" />

                    <!-- Coins Per Month -->
                    <TextView
                        android:id="@+id/coins_per_month_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/coins_per_month"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/powerpoints_months_to_max" />

                    <TextView
                        android:id="@+id/coins_per_month_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/coins_per_month_label"
                        app:layout_constraintTop_toBottomOf="@id/coins_per_month_label"
                        tools:text="4,600" />

                    <TextView
                        android:id="@+id/coins_months_to_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="@id/coins_per_month_value"
                        app:layout_constraintTop_toBottomOf="@id/coins_per_month_value"
                        tools:text="Will take approximately 19 months to max out" />

                    <TextView
                        android:id="@+id/credits_per_month_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/credits_per_month"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coins_months_to_max" />

                    <TextView
                        android:id="@+id/credits_per_month_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/credits_per_month_label"
                        app:layout_constraintTop_toBottomOf="@id/credits_per_month_label"
                        tools:text="1,200" />
                    <TextView
                        android:id="@+id/credits_months_to_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="@id/credits_per_month_value"
                        app:layout_constraintTop_toBottomOf="@id/credits_per_month_value"
                        tools:text="Will take approximately 1 month to max out" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/credits_months_to_max"
                        android:layout_marginTop="12dp"
                        android:padding="4dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceHeadline4"
                            android:gravity="center"
                            android:text="StarrDrops"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/starrdrops_text"
                            />
                            <com.nothingmotion.brawlprogressionanalyzer.ui.components.AccordionView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/starrdrops_text"
                                app:layout_constraintStart_toStartOf="parent"
                                app:title="(Read more)"
                                app:animationDuration="300"
                                app:accordionCardElevation="0dp"
                                app:accordionCardCornerRadius="0dp"
                                app:accordionMarginHorizontal="0dp"
                                app:accordionMarginVertical="4dp"
                                app:accordionPadding="2dp"
                                app:contentBackground="?attr/colorOnPrimary"
                                app:titleTextAppearance="?attr/textAppearanceBodyMedium"
                                app:titleTextColor="?attr/colorOnSurfaceVariant"
                                app:expanded="true"
                                android:id="@+id/starrdrops_read_more">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?attr/textAppearanceBodyMedium"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:text="This is a wayy to peridict starrdrops you will get in thw next month(s).note that these starr drops are only counted for daily starr drops you will get and not from brawl pass or ranked.\nwhich means if you not play everyday it's not garunteed to get exact number of drops.\ncalculations are estimations based on average chances of drops and might not be exactly correct."
                                    />
                            </com.nothingmotion.brawlprogressionanalyzer.ui.components.AccordionView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:gravity="start"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/starrdrops_read_more"
                                android:text="Total: 1400"
                                android:paddingHorizontal="18dp"
                                android:id="@+id/total_drops_text"/>
                        <LinearLayout
                            android:id="@+id/starrdrops_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/total_drops_text"

                            />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/future_resources_card"
            android:id="@+id/what_you_can_get_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/budget_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What you can get"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/budget_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/budget_title" />
                <com.nothingmotion.brawlprogressionanalyzer.ui.components.AccordionView
                    android:id="@+id/accordion_future_brawlers"
                    app:title="Future Brawlers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/budget_divider"
                    app:layout_constraintStart_toStartOf="parent"
                    >


                <!-- Header text for unlockable brawlers summary -->
                <TextView
                    android:id="@+id/brawlers_summary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"

                    tools:text="With 10,000 credits, you can unlock 5 brawlers" />

                <!-- Container for unlockable brawlers - using RecyclerView for better performance -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/brawlers_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/brawlers_summary_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/brawlers_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:clipToPadding="false"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Loading indicator for pagination -->
                <ProgressBar
                    android:id="@+id/load_more_progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/brawlers_container" />
                
                <!-- Load More button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/load_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Load More Brawlers"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/brawlers_container" />
                </com.nothingmotion.brawlprogressionanalyzer.ui.components.AccordionView>
                <com.nothingmotion.brawlprogressionanalyzer.ui.components.AccordionView
                    android:id="@+id/accordion_upgradable_brawlers"
                    app:title="Upgradable Brawlers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/accordion_future_brawlers"
                    app:layout_constraintStart_toStartOf="parent"
                    >


                    <!-- Header text for upgradable brawlers summary -->
                    <TextView
                        android:id="@+id/upgradable_brawlers_summary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/accordion_future_brawlers"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="With your resources, you can upgrade 8 brawlers" />

                    <!-- Container for upgradable brawlers - using RecyclerView for better performance -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/upgradable_brawlers_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clipToPadding="false"
                        app:layout_constraintTop_toBottomOf="@id/upgradable_brawlers_summary_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/upgradable_brawlers_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            android:clipToPadding="false"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:scrollbars="vertical"
                            android:fadeScrollbars="false"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Loading indicator for pagination -->
                    <ProgressBar
                        android:id="@+id/load_more_upgrades_progress"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/upgradable_brawlers_container" />
                </com.nothingmotion.brawlprogressionanalyzer.ui.components.AccordionView>
                
                <!-- What's Next Card - Personalized advice section -->
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/whats_next_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/what_you_can_get_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/whats_next_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/whats_next"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/whats_next_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/whats_next_title" />

                    <!-- Personalized advice text -->
                    <TextView
                        android:id="@+id/whats_next_advice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textIsSelectable="true"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintTop_toBottomOf="@id/whats_next_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Here's your personalized advice to maximize progression..." />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Progress overlay for loading state -->
    <FrameLayout
        android:id="@+id/progress_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>